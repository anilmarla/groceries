<resources>
    <!-- Base application theme. -->
    <style name="Theme.Groceries" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/gilroy_medium</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.Groceries.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Themes -->
    <style name="Theme.Groceries.SubTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/font_family_semi_bold</item>
        <item name="android:fontFamily">@font/font_family_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_title</item>
    </style>

    <style name="Theme.Groceries.SubTitleSmall" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/font_family_semi_bold</item>
        <item name="android:fontFamily">@font/font_family_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_sub_title_small</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.Groceries.SubTitle_medium" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/font_family_semi_bold</item>
        <item name="android:fontFamily">@font/font_family_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_sub_title_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


</resources>